<!-- Place details page -->

<h1><%= @place["name"] %></h1>


<!-- <h3>Entries</h3> -->

<ul>
  <% for entry in @entries %>
        <h3><%= entry["title"] %></h3>
        <h5><%= entry["occurred_on"] %></h5>
        <p><%= entry["description"] %></p>
        <hr>
  <% end %>
</ul>

<p>
  <a href="/entries/new?place_id=<%= @place["id"] %>">New Entry</a>
</p>

<p><a href="/places">Back to All Places</a></p>

<form action="/places/<%= @place["id"] %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <button>Delete Place</button>
</form>